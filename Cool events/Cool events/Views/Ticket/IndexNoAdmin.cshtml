@model Cool_events.Models.BigView

<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Tickets Table</h2>
    </div>
</div>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model.Tickets)
        {
                @foreach (var modelevent in Model.Events)
                {
                    @if (Logged.LoggedId == ticket.User && modelevent.EventId == ticket.Event)
                    {
                        <tr>
                            <td width="50%">@modelevent.Name</td>
                            <td width="50%">@modelevent.Discription</td>
                            <td width="50%">
                                <img style="width: 200px; height: 100px" src="@modelevent.Photo" />
                            </td>
                            <td width="50%">@modelevent.EventDate</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Ticket" class="btn btn-danger" asp-route-Id="@ticket.TicketId" asp-action="RemoveTicket">
                                        Reemove
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            }
    </tbody>
</table>
<div class="col-6 text-right">
    <a asp-controller="Home" asp-action="Back" class="btn btn-danger">
        Back
    </a>
</div>
