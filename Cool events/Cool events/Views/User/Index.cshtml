@model IEnumerable<Cool_events.Models.Users>

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User Table</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="User" asp-action="CreateUser" class="btn btn-primary">
                Create User
            </a>
        </div>
    </div>
    <br />
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Username
                </th>
                <th>
                    FirstName
                </th>
                <th>
                    LastName
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.UserId</td>
                    <td width="50%">@obj.Username</td>
                    <td width="50%">@obj.FirstName</td>
                    <td width="50%">@obj.LastName</td>
                   @if (obj.IsAdmin == false)
                   {
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="User" class="btn btn-info w-100" asp-route-Id="@obj.UserId" asp-action="EditUser">
                                    Edit
                                </a>

                                <a asp-controller="User" class="btn btn-danger" asp-route-Id="@obj.UserId" asp-action="DeleteUser">
                                    Delete
                                </a>
                            </div>
                        </td>
                   }
                   else if (obj.UserId == Logged.LoggedId)
                   { 
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="User" class="btn btn-info w-100" asp-route-Id="@obj.UserId" asp-action="EditUser">
                                    Edit
                                </a>

                            </div>
                        </td>
                   }
                </tr>
            }
        </tbody>
    </table>
    <div class="col-6 text-right">
        <a asp-controller="Home" asp-action="Back" class="btn btn-danger">
            Back
        </a>
    </div>
